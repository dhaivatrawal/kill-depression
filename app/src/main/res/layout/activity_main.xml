<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/bg">

<LinearLayout
    android:id="@+id/llone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:orientation="vertical">


        <TextView
            android:id="@+id/ttxt"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kill Depression"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rrr"
            android:textSize="25dp"
            android:textColor="#4facfe"
            />

        <View

            android:id="@+id/vvv1"
            android:layout_width="150dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center_horizontal"
            android:background="#000000"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"/>



    </LinearLayout>

            <ScrollView
                android:layout_above="@id/boot"
                android:layout_below="@+id/llone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdone"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardMaxElevation="10dp"
                        app:cardCornerRadius="7dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.4"
                                android:scaleType="fitXY"
                                android:src="@mipmap/dd"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".6"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Types of Depression"
                                android:textSize="15dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>



                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdtwo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="250dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardMaxElevation="10dp"
                        app:cardCornerRadius="7dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.4"
                                android:scaleType="fitXY"
                                android:src="@mipmap/kk"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".6"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Symptoms "
                                android:textSize="15dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>



                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdthree"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="250dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardMaxElevation="10dp"
                        app:cardCornerRadius="7dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.4"
                                android:scaleType="fitXY"
                                android:src="@mipmap/pp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".6"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Causes and Risk Factor"
                                android:textSize="15dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>



                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdfour"
                        android:layout_toRightOf="@id/cdthree"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="250dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardMaxElevation="10dp"
                        app:cardCornerRadius="7dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.4"
                                android:scaleType="fitXY"
                                android:src="@mipmap/qq"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".6"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Diagnosis"
                                android:textSize="15dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>



                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdfive"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="250dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardMaxElevation="10dp"
                        app:cardCornerRadius="7dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.4"
                                android:scaleType="fitXY"
                                android:src="@mipmap/rr"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".6"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Treatments"
                                android:textSize="15dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>



                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdsix"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="250dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardMaxElevation="10dp"
                        app:cardCornerRadius="7dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.4"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ss"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".6"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="ADA and your Rights"
                                android:textSize="15dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>



                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdseven"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="250dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardMaxElevation="10dp"
                        app:cardCornerRadius="7dp"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.4"
                                android:scaleType="fitXY"
                                android:src="@mipmap/tt"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".6"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Depression in Kids"
                                android:textSize="15dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>



                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>



                </LinearLayout>

            </ScrollView>




    <androidx.cardview.widget.CardView
        android:id="@+id/boot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/vvv"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shareit"
                    android:layout_margin="7dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/rateMe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rate"
                    android:layout_margin="7dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/moreapps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/moreapps"
                    android:layout_margin="7dp"/>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/vvv"
        android:layout_width="150dp"
        android:layout_height="1.5dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>